<div class="govuk-form-group">
  <fieldset class="govuk-fieldset" aria-describedby="<%= question['id'] %>-hint">
    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
      <h1 class="govuk-fieldset__heading">
        <%= question["title"] %>
      </h1>
    </legend>
    <div id="<%= question['id'] %>-hint" class="govuk-hint">
      <%= question["hint"] %>
    </div>
    <textarea class="govuk-textarea" id="answers_<%= question['id'] %>" name="answers[<%= question['id'] %>]" rows="5" aria-describedby="<%= question['id'] %>-hint"></textarea>
  </fieldset>
</div>
