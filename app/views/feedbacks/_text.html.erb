<div class="govuk-form-group">
  <fieldset class="govuk-fieldset">
    <%= render "legend", question: question %>
    <label for="answers_<%= question['id'] %>" class="govuk-label govuk-visually-hidden">
      <%= question["sr_label"] %>
    </label>
    <textarea class="govuk-textarea" id="answers_<%= question['id'] %>" name="answers[<%= question['id'] %>]" rows="5" <% if question['mandatory'] == true %>required<% end %>></textarea>
  </fieldset>
</div>
