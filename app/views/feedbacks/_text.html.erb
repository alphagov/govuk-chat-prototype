<div class="govuk-form-group">
  <fieldset class="govuk-fieldset" aria-describedby="<%= question['id'] %>-hint">
    <%= render "legend", question: question  %>
    <div id="<%= question['id'] %>-hint" class="govuk-hint">
      <%= question["hint"] %>
    </div>
    <textarea class="govuk-textarea" id="answers_<%= question['id'] %>" name="answers[<%= question['id'] %>]" rows="5" aria-describedby="<%= question['id'] %>-hint" <% if question['mandatory'] == true %>required<% end %>></textarea>
  </fieldset>
</div>
