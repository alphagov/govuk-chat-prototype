<div class="govuk-form-group">
  <fieldset class="govuk-fieldset" <% if question["hint"].present? %> aria-describedby="<%= question['id'] %>-hint" <% end %>>
    <%= render "legend", question: question %>
    <% if question["hint"].present? %>
      <div id="<%= question['id'] %>-hint" class="govuk-hint">
        <%= question["hint"] %>
      </div>
    <% end %>
    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
      <% question["options"].each_with_index do |option, index| %>
        <div class="govuk-checkboxes__item">
          <input class="govuk-checkboxes__input" id="answers_<%= question['id'] %>_<%= index %>" name="answers[<%= question['id'] %>][<%= index %>]" type="checkbox" value="<%= option %>"<% if question['mandatory'] == true %>required<% end %>>
          <label class="govuk-label govuk-checkboxes__label" for="<%= question["id"] %>_<%= index %>">
            <%= option %>
          </label>
        </div>
      <% end %>
    </div>
  </fieldset>
</div>
