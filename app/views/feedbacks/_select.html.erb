<div class="govuk-form-group">
  <fieldset class="govuk-fieldset">
    <%= render "legend", question: question %>
    <% if question["hint"].present? %>
      <div id="<%= question['id'] %>-hint" class="govuk-hint">
        <%= question["hint"] %>
      </div>
    <% end %>
    <label for="answers_<%= question['id'] %>" class="govuk-label govuk-visually-hidden">
      <%= question["sr_label"] %>
    </label>
    <select 
      class="govuk-select" 
      id="answers_<%= question['id'] %>" 
      name="answers[<%= question['id'] %>]" 
      <% if question["hint"].present? %> aria-describedby="<%= question['id'] %>-hint <% end %>
      <% if question['mandatory'] == true %>required<% end %>
    >
      <% question["options"].each_with_index do |option, index| %>
        <option value="<%= option %>"><%= option %></option>
      <% end %>
    </select>
  </fieldset>
</div>
