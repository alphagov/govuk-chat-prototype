<div class="govuk-form-group">
  <fieldset class="govuk-fieldset" aria-describedby="<%= question['id'] %>-hint">
    <%= render "legend", question: question  %>
    <div id="<%= question['id'] %>-hint" class="govuk-hint">
      <%= question["hint"] %>
    </div>
    <select class="govuk-select" id="answers_<%= question['id'] %>" name="answers[<%= question['id'] %>]" <% if question['mandatory'] == true %>required<% end %>>
      <% question["options"].each_with_index do |option, index| %>
        <option value="<%= option %>"><%= option %></option>
      <% end %>
    </select>
  </fieldset>
</div>
