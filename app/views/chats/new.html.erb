<div class="govuk-grid-row govuk-chat-container">
  <div class="govuk-grid-column-two-thirds">
    <% if @chats.any? %>
      <%= render "conversation", chats: @chats %>
    <% else %>
      <div id="chat-pane-small" class="govuk-chat-info">
        <p class="govuk-body govuk-body--grey">Hello ðŸ‘‹ To get started, ask a question about business or trade. For example, how do I employ people?</p>
      </div>
    <% end %>
  </div>
</div>

<div class="govuk-chat-input-wrapper">
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds govuk-chat-input">
        <%= render "form", chat: Chat.new(chat_id: @chat_id) %>
      </div>
    </div>
  </div>
</div>
